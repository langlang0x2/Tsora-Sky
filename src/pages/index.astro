      </Section> -->
      <!-- #endregion -->

      <!-- #region Certifications -->
      <Section title='Certifications'>
        <Card
          heading='全国大学生数学竞赛（非数学A类）'
          subheading='第十六届全国大学生数学竞赛初赛 一等奖'
          date='2024年12月'
        />
        <Card
          heading='蓝桥杯全国软件和信息技术专业人才大赛'
          subheading='第十六届全国总决赛 C/C++ 程序设计 大学 A 组 三等奖'
          date='2025年6月'
        />
      </Section>
      <!-- #endregion -->
      
      <!-- #region Skills -->
      <Section title='Skills'>
        <SkillLayout title='Languages' skills={languages} />
        <SkillLayout title='Frontend' skills={frontend} />
        <SkillLayout title='Backend' skills={backend} />
      </Section>
